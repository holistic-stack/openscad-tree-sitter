{
  "name": "openscad-tree-sitter",
  "version": "0.1.0",
  "description": "Tree-sitter grammar for OpenSCAD for Node.js and TypeScript",
  "main": "bindings/node/index.js",
  "types": "bindings/node",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:html": "vitest run --coverage --reporter=html",
    "test:ui": "vitest --ui",
    "build": "tree-sitter generate",
    "build:wasm": "tree-sitter build --wasm",
    "parse": "tree-sitter parse",
    "playground": "tree-sitter playground",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "keywords": [
    "parser",
    "tree-sitter",
    "openscad",
    "grammar",
    "syntax",
    "highlighting",
    "incremental",
    "parsing",
    "3d",
    "cad",
    "nodejs",
    "typescript"
  ],
  "files": [
    "grammar.js",
    "queries/*",
    "src/**",
    "bindings/node/**"
  ],
  "author": "OpenSCAD Community",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "prebuildify": "^6.0.0",
    "tree-sitter-cli": "^0.22.1",
    "vite": "^5.2.0",
    "vitest": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/openscad-tree-sitter.git"
  },
  "tree-sitter": [
    {
      "scope": "source.openscad",
      "file-types": [
        "scad"
      ],
      "highlights": [
        "queries/highlights.scm"
      ],
      "tags": [
        "queries/tags.scm"
      ]
    }
  ],
  "dependencies": {
    "node-gyp-build": "^4.8.0",
    "web-tree-sitter": "^0.25.3"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  }
}
