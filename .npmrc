# Enforce engine-strict mode to check Node.js and pnpm versions
engine-strict=true

# Use pnpm for package management
package-manager-strict=true

# Automatically install peer dependencies
auto-install-peers=true

# Use exact versions for better reproducibility
save-exact=true

# Prefer offline packages when available
prefer-offline=true

# Enable shamefully-hoist for better compatibility with some tools
shamefully-hoist=false

# Use hard links to save disk space
link-workspace-packages=true

# Enable strict peer dependencies
strict-peer-dependencies=true
