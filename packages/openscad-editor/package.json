{
  "name": "@openscad/editor",
  "version": "0.1.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "README.md",
    "./public/tree-sitter-openscad.wasm",
    "./public/highlights.scm"
  ],
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openscad/openscad-tree-sitter.git",
    "directory": "packages/openscad-editor"
  },
  "keywords": [
    "openscad",
    "editor",
    "monaco",
    "react",
    "tree-sitter"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "env-cmd -e plain vite build",
    "dev": "vite build --watch",
    "test": "env-cmd -e plain vitest run",
    "test:watch": "vitest",
    "test:coverage": "env-cmd -e plain vitest run --coverage",
    "lint": "env-cmd -e plain eslint .",
    "lint:fix": "env-cmd -e plain eslint . --fix",
    "typecheck": "env-cmd -e plain tsc --noEmit",
    "postinstall": "shx mkdir -p ./public && shx cp ./node_modules/@openscad/tree-sitter-openscad/tree-sitter-openscad.wasm ./public/tree-sitter-openscad.wasm && shx cp ./node_modules/web-tree-sitter/tree-sitter.wasm ./public/tree-sitter.wasm"
  },
  "dependencies": {
    "web-tree-sitter": "0.25.3",
    "@openscad/parser": "workspace:*",
    "@openscad/tree-sitter-openscad": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "@monaco-editor/react": "^4.7.0",
    "monaco-editor": "^0.52.2"
  },
  "devDependencies": {
    "shx": "^0.3.4",
    "@monaco-editor/react": "^4.7.0",
    "monaco-editor": "^0.52.2",
     "vite-plugin-dts": "^3.9.1",
    "vitest-fetch-mock": "^0.4.5",
        "vitest": "^3.1.4"
  }
}
