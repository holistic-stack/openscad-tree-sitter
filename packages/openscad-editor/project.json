{
  "name": "openscad-editor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/openscad-editor/src",
  "projectType": "library",
  "tags": ["editor", "ui"],
  "implicitDependencies": ["tree-sitter-openscad"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/openscad-editor",
        "main": "packages/openscad-editor/src/index.ts",
        "tsConfig": "packages/openscad-editor/tsconfig.lib.json",
        "assets": [
          "packages/openscad-editor/README.md",
          {
            "glob": "**/*",
            "input": "packages/openscad-editor/public/",
            "output": "./public/"
          }
        ]
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "dev": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "openscad-editor:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "openscad-editor:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "openscad-editor:build:production",
          "hmr": false
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/openscad-editor",
        "args": ["run"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  }
}
