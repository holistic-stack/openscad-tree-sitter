{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
       "node",
      // Include type definitions for:
      "vite/client", // - Vite client types
      "vitest/globals", // - Vitest globals for testing
      "vitest" // - Vitest types for testing
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/lib/openscad-parser/openscad-parser.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
