{
  "name": "tree-sitter-openscad",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tree-sitter-openscad/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tree-sitter generate",
          "tree-sitter build --wasm"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "outputs": [
        "{projectRoot}/src/parser.c",
        "{projectRoot}/src/grammar.json",
        "{projectRoot}/src/node-types.json",
        "{projectRoot}/tree-sitter-openscad.wasm"
      ]
    },
    "build:node": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node-gyp rebuild",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/build"]
    },
    "prebuildify": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prebuildify --napi --strip",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/prebuilds"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tree-sitter test",
        "cwd": "{projectRoot}"
      }
    },
    "parse": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tree-sitter parse",
        "cwd": "{projectRoot}"
      }
    },
    "playground": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tree-sitter playground",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}"]
      }
    }
  },
  "tags": ["type:library", "scope:grammar", "platform:native", "platform:wasm"]
}
