{
  "name": "tree-sitter-openscad",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tree-sitter-openscad/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tree-sitter generate",
          "tree-sitter build --wasm"
        ],
        "cwd": "packages/tree-sitter-openscad",
        "parallel": false
      },
      "outputs": ["packages/tree-sitter-openscad/src/parser.c", "packages/tree-sitter-openscad/src/grammar.json"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tree-sitter test",
        "cwd": "packages/tree-sitter-openscad"
      }
    },
    "parse": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tree-sitter parse",
        "cwd": "packages/tree-sitter-openscad"
      }
    },
    "playground": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tree-sitter playground",
        "cwd": "packages/tree-sitter-openscad"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "packages/tree-sitter-openscad"
      }
    }
  },
  "tags": ["grammar"]
}
