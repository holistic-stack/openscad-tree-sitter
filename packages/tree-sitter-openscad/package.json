{
  "name": "@openscad/tree-sitter-openscad",
  "version": "0.1.0",
  "description": "Tree-sitter grammar for OpenSCAD",
  "main": "bindings/node",
  "types": "bindings/node/index.d.ts",
  "browser": "bindings/web/index.js",
  "scripts": {
    "build": "echo 'Grammar package uses pre-built WASM file. Use build:native or build:wasm for local development.'",
    "build:native": "env-cmd -e plain tree-sitter generate && env-cmd -e plain tree-sitter build --wasm && env-cmd -e plain node-gyp rebuild",
    "build:node": "env-cmd -e plain node-gyp rebuild",
    "build:wasm": "env-cmd -e plain tree-sitter generate && env-cmd -e plain tree-sitter build --wasm",
    "install": "node-gyp-build",
    "prebuildify": "env-cmd -e plain prebuildify --napi --strip",
    "test": "env-cmd -e plain tree-sitter test",
    "parse": "env-cmd -e plain tree-sitter parse",
    "playground": "env-cmd -e plain tree-sitter playground",
    "lint": "echo 'No linting configured for grammar package'"
  },
  "keywords": [
    "parser",
    "tree-sitter",
    "openscad",
    "grammar",
    "syntax",
    "highlighting",
    "incremental",
    "parsing",
    "3d",
    "cad"
  ],
  "files": [
    "grammar.js",
    "queries/*",
    "src/**",
    "bindings/node/**",
    "bindings/web/**",
    "binding.gyp",
    "prebuilds/**",
    "tree-sitter-openscad.wasm"
  ],
  "author": "OpenSCAD Community",
  "license": "MIT",
  "dependencies": {
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "0.25.3",
    "node-addon-api": "^8.3.1",
    "node-gyp": "^11.2.0",
    "prebuildify": "^6.0.0",
    "web-tree-sitter": "0.25.3"
  },
  "peerDependencies": {
    "tree-sitter": "0.22.4",
    "web-tree-sitter": "0.25.3"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    },
    "web-tree-sitter": {
      "optional": true
    }
  },
  "tree-sitter": [
    {
      "scope": "source.openscad",
      "file-types": [
        "scad"
      ],
      "highlights": [
        "queries/highlights.scm"
      ],
      "tags": [
        "queries/tags.scm"
      ]
    }
  ]
}
