{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@openscad/editor": ["packages/openscad-editor/src/index.ts"],
      "@openscad/parser": ["packages/openscad-parser/src/lib/index.ts"],
      "@openscad/tree-sitter-openscad": [
        "packages/tree-sitter-openscad/src/index.ts"
      ],
      "openscad-demo": ["packages/openscad-demo/src/index.ts"]
    }
  }
}
