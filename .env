# Nx Terminal Output Configuration
# =================================

# Disable dynamic terminal output (animations, progress bars) and use plain text CI-style output
# This makes Nx output behave like it does in CI environments - plain text, no animations
NX_TASKS_RUNNER_DYNAMIC_OUTPUT=false

# Disable log grouping for cleaner, linear output
NX_SKIP_LOG_GROUPING=true

# Optional configurations (uncomment to enable):

# Enable verbose logging for more detailed output (useful for debugging)
# NX_VERBOSE_LOGGING=true

# Disable performance logging (reduces noise in output)
# NX_PERF_LOGGING=false

# Disable the Nx daemon for debugging (shows console.log statements in plugins)
# NX_DAEMON=false

# Force non-interactive mode (no prompts)
# NX_INTERACTIVE=false
